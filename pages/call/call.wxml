<view class="call-container">
  <!-- 展示关系文本 -->
  <view class="string-container">
    <text>我</text>
    <text>{{textStr}}</text>
  </view>
  <view class="answer-container">
    <view class="left">
      <text>我称呼Ta：</text>
      <text>张三</text>
    </view>
    <view class="right">
      <text>Ta称呼我：</text>
      <text>张三</text>
    </view>
  </view>
  <!-- 性别区 -->
  <view class="bar-container">
    <text class="label">我的性别：</text>
    <text>男</text>
    <switch class="sex-switch" checked="{{switch}}" bindchange="handleSwitchChange" />
    <text>女</text>
  </view>
  <!-- 选择区 -->
  <view class="operate-container">
    <!-- 第一行 -->
    <view class="ln">
      <view class="block">
        <operate-item text="父" data-text="父" bindtap="handleTap"></operate-item>
      </view>
      <view class="block">
        <operate-item text="母"></operate-item>
      </view>
      <view class="block">
        <operate-item src="../../static/imgs/delete.png"></operate-item>
      </view>
      <view class="block">
        <operate-item src="../../static/imgs/trash.png"></operate-item>
      </view>
    </view>
    <!-- 第二行 -->
    <view class="ln">
      <view class="block">
        <operate-item text="兄"></operate-item>
      </view>
      <view class="block">
        <operate-item text="姐"></operate-item>
      </view>
      <view class="block">
        <operate-item text="夫"></operate-item>
      </view>
      <view class="block">
        <operate-item text="妻"></operate-item>
      </view>
    </view>
    <!-- 第三行 -->
    <view class="ln3">
      <view class="left">
        <view class="sub-ln">
          <view class="block">
            <operate-item text="弟"></operate-item>
          </view>
          <view class="block">
            <operate-item text="妹"></operate-item>
          </view>
          <view class="block">
            <operate-item src="../../static/imgs/loop.png"></operate-item>
          </view>
        </view>
        <view class="sub-ln">
          <view class="block">
            <operate-item text="子"></operate-item>
          </view>
          <view class="block">
            <operate-item text="女"></operate-item>
          </view>
          <view class="block">
            <operate-item src="../../static/imgs/query.png"></operate-item>
          </view>
        </view>
      </view>
      <view class="right">
        <operate-item text="="></operate-item>
      </view>
    </view>
  </view>
</view>