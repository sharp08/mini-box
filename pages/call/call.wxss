.call-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  color: var(--white);
}

.icon {
  height: 40px;
  width: 40px;
}

.string-container {
  background: var(--main-bg-color);
  flex-grow: 1;
  padding: 0 4px;
  overflow-y: auto;
}

.answer-container {
  background: var(--main--dark-bg-color);
  flex-shrink: 0;
  padding: 3px 10px;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.bar-container {
  background: var(--main--dark-bg-color);
  flex-shrink: 0;
  padding-left: 10px;
  padding-top: 3px;
  padding-bottom: 3px;
  font-size: 20px;
  font-weight: bold;
}

.operate-container {
  flex-shrink: 0;
  background: var(--main-bg-color);
  font-size: 30px;
  font-weight: bold;
}

.operate-container .ln {
  display: flex;
}

.operate-container .ln .block {
  width: 25vw;
  height: 200rpx;
  box-sizing: border-box;
  padding-top: 2rpx;
  padding-left: 2rpx;
}

.operate-container .ln .block:last-child {
  padding-right: 2rpx;
}

.operate-container .ln3 {
  display: flex;
}

.operate-container .ln3 .left .sub-ln {
  display: flex;
}

.operate-container .ln3 .left .sub-ln:last-child {
  padding-bottom: 2rpx;
}

.operate-container .ln3 .left .sub-ln .block {
  width: 25vw;
  height: 200rpx;
  padding-top: 2rpx;
  padding-left: 2rpx;
  box-sizing: border-box;
}

.operate-container .ln3 .right {
  width: 25vw;
  padding: 2rpx;
  box-sizing: border-box;
}